{
  "buildCommand": "cd frontend && pnpm build",
  "outputDirectory": "frontend/dist",
  "builds": [
    { "src": "api/index.py", "use": "@vercel/python" },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "rewrites": [{ "source": "/api/(.*)", "destination": "/api/index.py" }]
}
